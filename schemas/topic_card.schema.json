{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://livingkb/schema/topic_card.schema.json",
  "title": "TopicCard",
  "type": "object",
  "required": [
    "id",
    "entity_type",
    "labels",
    "summary_variants",
    "slots",
    "consensus_level",
    "epistemic_type",
    "meta"
  ],
  "additionalProperties": false,
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-z0-9_]+$",
      "description": "Stable snake_case identifier."
    },
    "entity_type": {
      "type": "string",
      "enum": ["Person", "Place", "Concept", "Event", "Organization"]
    },
    "labels": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "summary_variants": {
      "type": "object",
      "required": ["short_answer", "kid_friendly", "standard"],
      "properties": {
        "short_answer": { "type": "string" },
        "kid_friendly": { "type": "string" },
        "standard": { "type": "string" },
        "expert_notes": { "type": "string" }
      },
      "additionalProperties": false
    },
    "slots": {
      "type": "object",
      "description": "Type-specific fields; validated separately.",
      "additionalProperties": true
    },
    "evidence": {
      "type": "array",
      "items": { "$ref": "evidence_item.schema.json" },
      "default": []
    },
    "consensus_level": {
      "type": "string",
      "enum": [
        "consensus_high",
        "consensus_mixed",
        "frontier_early",
        "controversial",
        "historical_record"
      ]
    },
    "epistemic_type": {
      "type": "string",
      "enum": [
        "empirical_science",
        "empirical_historical",
        "expert_opinion",
        "lived_experience",
        "value_judgment",
        "mixed_empirical_hypothesis",
        "emerging_research"
      ]
    },
    "relations": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["type", "target_id"],
        "properties": {
          "type": { "type": "string" },
          "target_id": {
            "type": "string",
            "pattern": "^[a-z0-9_]+$"
          },
          "description": { "type": "string" }
        },
        "additionalProperties": false
      },
      "default": []
    },
    "meta": {
      "type": "object",
      "required": ["schema_version", "created_at", "last_reviewed", "sources"],
      "properties": {
        "schema_version": { "type": "string" },
        "created_at": {
          "type": "string",
          "format": "date-time"
        },
        "last_reviewed": {
          "type": "string",
          "format": "date-time"
        },
        "reviewed_by": {
          "type": "array",
          "items": { "type": "string" }
        },
        "sources": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "required": ["type", "title", "url"],
            "properties": {
              "type": { "type": "string" },
              "title": { "type": "string" },
              "url": {
                "type": "string",
                "format": "uri"
              },
              "note": { "type": "string" }
            },
            "additionalProperties": false
          }
        },
        "notes": { "type": "string" }
      },
      "additionalProperties": false
    }
  }
}

