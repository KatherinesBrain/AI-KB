{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://livingkb/schema/question_template.schema.json",
  "title": "QuestionTemplate",
  "type": "object",
  "required": [
    "id",
    "entity_type",
    "intent",
    "patterns",
    "field_paths",
    "style"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-z0-9_]+$"
    },
    "entity_type": {
      "type": "string",
      "enum": ["Person", "Place", "Concept", "Event", "Organization"]
    },
    "intent": { "type": "string" },
    "patterns": {
      "type": "array",
      "minItems": 1,
      "items": { "type": "string" }
    },
    "field_paths": {
      "type": "array",
      "minItems": 1,
      "items": { "type": "string" }
    },
    "style": {
      "type": "string",
      "enum": ["short", "kid_friendly", "standard", "expert", "list"]
    },
    "fallback_style": {
      "type": "string",
      "enum": ["short", "kid_friendly", "standard", "expert", "list"]
    },
    "explanation_style": {
      "type": "string",
      "enum": ["plain", "list", "timeline"],
      "default": "plain"
    },
    "notes": { "type": "string" }
  },
  "additionalProperties": false
}

